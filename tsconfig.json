{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ]
}
